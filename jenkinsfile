pipeline {
    agent {
        docker {
            image 'node:16-buster-slim'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') { 
            steps {
                sh './jenkins/scripts/test.sh' 
                }
            }
        stage('Manual Approval') {
            steps {
                input "Apakah Anda yakin ingin melanjutkan ke stage deploy?"
                }
            }
        stage('Deploy') {
            steps {
                sh 'chmod +x jenkins/scripts/deploy.sh'
                sh 'chmod +x jenkins/scripts/kill.sh'
                sh '. jenkins/scripts/deploy.sh' 
                sh 'sleep 1m && . jenkins/scripts/kill.sh' 
            }
        }
    }
}
