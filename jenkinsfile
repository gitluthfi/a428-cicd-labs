pipeline {
    agent {
        docker {
            image 'node:16-buster-slim'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
stage('Manual Approval') {
            steps {
                input message: 'Lanjutkan ke tahap Deploy?',
                    ok: 'Proceed',
                    submitterParameter: 'APPROVER',
                    parameters: [
                        string(name: 'Komentar', defaultValue: '', description: 'Masukkan komentar Anda')
                    ]
            }
        }
        stage('Deploy') {
            when {
                expression { params.APPROVER == 'Proceed' }
            }
            steps {
                sh './jenkins/scripts/deliver.sh' 
                sh 'sleep 1m && ./jenkins/scripts/kill.sh' 
            }
        }
    }
}
