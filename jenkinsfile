pipeline {
    agent {
        docker {
            image 'node:16-buster-slim'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Manual Approval') {
            steps {
                script {
                    def userInput = input message: 'Lanjutkan ke tahap Deploy?',
                        ok: 'Proceed',
                        submitterParameter: 'APPROVER',
                        parameters: [
                            string(name: 'Komentar', defaultValue: '', description: 'Masukkan komentar Anda')
                        ],
                        abort: 'Abort'
                    if (userInput == null) {
                        error('Pipeline dihentikan oleh pengguna')
                    }
                }
            }
        }
        stage('Deploy') {
            when {
                expression { params.APPROVER == 'Proceed' }
            }
            steps {
                sh './jenkins/scripts/deploy.sh' 
            }
        }
    }
}
